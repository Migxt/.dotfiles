#!/bin/sh

symbol() {
    [ $(git --git-dir=$HOME/.dotfiles/.git --work-tree=$HOME/.dotfiles status | grep -c "modified:") -gt 0 ] && echo "îœ¥" || echo ""
    exit $?
}
class() {
    [ $(git --git-dir=$HOME/.dotfiles/.git --work-tree=$HOME/.dotfiles status | grep -c "modified:") -gt 0 ] && echo "git-mod" || echo ""
    exit $?
}

[ "$1" = "icon" ]  && symbol && exit
[ "$1" = "class" ] && class  && exit